acl "trusted" {
	192.168.2.10; # Rancher - FA:58:B8:CE:04:B8
	192.168.2.11; # ks8-vm2 - 22:E2:A0:2F:92:53
	192.168.2.12; # ks8-vm3 - 82:57:68:61:12:DD
	192.168.2.13; # ks8-vm4 - 4E:C0:9E:89:A1:DD
	192.168.2.200; # dns-ns1 - 6E:60:3D:9C:6E:60
	192.168.2.201; # dns-ns2 - 02:C0:10:09:A7:D0
};

options {
	directory "/var/cache/bind";

        recursion yes;
        allow-recursion { trusted; };
        listen-on { 192.168.2.201; };     # ns2 private IP address
        allow-transfer { none; };         # disable zone transfers by default

        forwarders {
                8.8.8.8;
                8.8.4.4;
        };

	dnssec-validation auto;
	listen-on-v6 { any; };
};
