// Consider adding the 1918 zones here, if they are not used in your
// organization
//include "/etc/bind/zones.rfc1918";

zone "pve.datacenter.tsc" {
    type master;
    file "/etc/bind/zones/db.pve.datacenter.tsc"; # zone file path
    allow-transfer { 192.168.2.201; };            # ns2 private IP address - secondary
};

zone "168.192.in-addr.arpa" {
    type master;
    file "/etc/bind/zones/db.192.168";  # 168.192.2.0/24 subnet
    allow-transfer { 192.168.2.201; };  # ns2 private IP address - secondary
};
